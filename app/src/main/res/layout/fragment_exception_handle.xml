<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button android:id="@+id/btn_java_exception" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="java抛出异常"/>
    <Button android:id="@+id/btn_native_exception" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="native抛出异常"/>
    <Button android:id="@+id/btn_call_limit_interface" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="未处理异常调用了不被允许的接口"/>
    <Button android:id="@+id/btn_test" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="其它测试"/>
</LinearLayout>